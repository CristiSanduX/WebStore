<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <h1>Produse</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nume</th>
          <th>Preț</th>
        </tr>
      </thead>
      <tbody>
        <% produse.forEach((produs) => { %>
          <tr>
            <td><%= produs.id %></td>
            <td><%= produs.nume %></td>
            <td><%= produs.pret %></td>
            <td>
              <form method="POST" action="/adaugare_cos">
                <input type="hidden" name="id" value="<%= produs.id %>">
                <button type="submit">Adaugă în coș</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <br><br>
    <button><a href="/creare-bd">Creare BD</a></button>
    <button><a href="/incarcare-bd">Încarcare BD</a></button>
  </body>
</html>
